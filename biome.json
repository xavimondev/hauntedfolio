{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["./astro","./.vscode","./node_modules","./public"]
	},
	"formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 100,
		"indentWidth": 2
  },
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle" :"single",
			"semicolons": "asNeeded",
			"trailingCommas": "none",
			"arrowParentheses":"always"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
